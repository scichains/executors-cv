        },
        {
          "value": "SCALED_ROBERTS_CROSS_QUADRANT_1",
          "caption": "Scaled Roberts cross, quadrant 1"
        },
        {
          "value": "SCALED_ROBERTS_CROSS_QUADRANT_2",
          "caption": "Scaled Roberts cross, quadrant 2"
        },
        {
          "value": "D2_DX2",
          "caption": "∂²/∂x²"
        },
        {
          "value": "D2_DY2",
          "caption": "∂²/∂y²"
        },
        {
          "value": "D2_DXDY",
          "caption": "∂²/∂x∂y"
