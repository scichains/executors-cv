        {
          "value": "SUM_OF_ABSOLUTE_VALUES",
          "caption": "Sum of absolute values: |x|+|y|+..."
        },
        {
          "value": "MEAN_ABSOLUTE_VALUE",
          "caption": "Mean absolute value: (|x|+|y|+...)/M"
