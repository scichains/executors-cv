        {
          "value": "EUCLIDEAN",
          "caption": "Euclidean: sqrt(x²+y²+...)"
        },
        {
          "value": "NORMALIZED_EUCLIDEAN",
          "caption": "Normalized Euclidean: sqrt((x²+y²+...)/M)"
