        {
          "value": "CYCLIC",
          "caption": "cyclic"
        },
        {
          "value": "MIRROR_CYCLIC",
          "caption": "mirror-cyclic"
        },
        {
          "value": "ZERO_CONSTANT",
          "caption": "0"
        },
        {
          "value": "POSITIVE_INFINITY",
          "caption": "+∞"
        },
        {
          "value": "NEGATIVE_INFINITY",
          "caption": "−∞"
        },
        {
          "value": "NAN_CONSTANT",
          "caption": "NaN"
        }
      ],
      "default": "ZERO_CONSTANT"
    },
    {
      "caption": "Convert multi-channel matrix to monochrome",
      "name": "convertToMono",
      "value_type": "boolean",
      "edition_type": "value",
      "default": true
    }
