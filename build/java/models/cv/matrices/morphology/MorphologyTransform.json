      "items": [
        {
          "value": "EROSION",
          "caption": "erosion transform"
        },
        {
          "value": "OPENING",
          "caption": "opening transform (granulometry)"
        }
      ],
      "default": "EROSION"
    },
    {
      "caption": "Resulting element type",
      "name": "resultElementType",
      "value_type": "String",
      "edition_type": "enum",
      "items": [
        {
          "value": "BYTE",
          "caption": "\"byte\" type"
        },
        {
          "value": "SHORT",
          "caption": "\"short\" type"
        },
        {
          "value": "INT",
          "caption": "\"int\" type"
        },
        {
          "value": "FLOAT",
          "caption": "\"float\" type"
        }
      ],
      "default": "FLOAT"
    },
    {
      "name": "maxNumberOfIterations",
      "value_type": "String",
      "edition_type": "value",
      "default": "200"
    },
    {
      "name": "patternsSpecification",
      "value_type": "String",
      "edition_type": "value",
      "default": "cross | square 3"
